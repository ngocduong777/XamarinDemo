<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQLiteDemo.PageDangNhap"
             Title="Dang Nhap" IconImageSource="IconLangENG.gif">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="txttendangnhap" Placeholder="Ten dang nhap" />
            <Entry x:Name="txtmatkhau" IsPassword="true" Placeholder="Mat khau" />
            <Button x:Name="cmddangnhap" Text="Dang nhap" Clicked="cmddangnhap_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>