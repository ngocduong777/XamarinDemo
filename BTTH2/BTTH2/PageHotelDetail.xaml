<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTTH2.PageHotelDetail"
             Title="{Binding hotelname}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding hotelimage}" x:Name="hotelimage" HorizontalOptions="CenterAndExpand" Margin="10"/>
            <Label Text="{Binding hotelname}" x:Name="hotelname" FontSize="20" FontAttributes="Bold"/>
            <Label Text="{Binding hotelprice}" x:Name="hotelprice" FontSize="18" FontAttributes="Bold" TextColor="Green"/>
            <Label Text="{Binding hoteldes}" x:Name="hoteldes" FontSize="17"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>