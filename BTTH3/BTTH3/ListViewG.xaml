<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BTTH3.ListViewG">
    <ContentPage.Content>
        <ListView x:Name="listCountry"
                  IsGroupingEnabled="True"
                  GroupDisplayBinding="{Binding countryName}"
                  GroupShortNameBinding="{Binding description}"
                  SeparatorColor="Black"
                  HasUnevenRows="True" RowHeight="100">
            <ListView.ItemTemplate>
                <DataTemplate>
                    
                    <ImageCell ImageSource="{Binding cityImg}" Text="{Binding cityName}"
                               Height="50" TextColor="Black"/>
                    
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.GroupHeaderTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding countryName}"
                              Detail="{Binding description}"
                              TextColor="Brown"
                              DetailColor="BurlyWood" />
                </DataTemplate>
            </ListView.GroupHeaderTemplate>
            
            
            
        </ListView>
        
    </ContentPage.Content>
</ContentPage>